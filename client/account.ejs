<html lang="en" >
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Angular Material style sheet -->
	<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
	
	<!-- Angular Material requires Angular.js Libraries -->
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.min.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>

	<!-- Angular Material Library -->
	<script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
</head>
<body ng-app="authApp" ng-cloak ng-controller="authController">
		<div layout="row" layout-align="center center">
			<div id="auth-container" ng-view>
			</div>
			<script type="text/ng-template" id="login-page.htm">
				<form method="post" action="/login" name="loginForm">
				<div id="login-container" flex-xs layout="column">
					<md-card>
						<img ng-src="{{imagePath}}" class="md-card-image" alt="Washed Out" md-colors="{background: '{{primary}}'}"/>
						<md-card-title>
							<md-card-title-text>
								<span class="md-headline">Login to chatpower</span>
							</md-card-title-text>
						</md-card-title>
						<md-card-content>
							<div layout="column">
								<md-input-container>
									<label>Username</label>
									<input type="text" name="username" required/>
									<div ng-messages="loginForm.username.$error">
										<div ng-message="required">Username required.</div>
									</div>
								</md-input-container>
								
								<md-input-container>
									<label>Password</label>
									<input type="password" name="password" required/>
									<div ng-messages="loginForm.username.$error">
										<div ng-message="required">Passowrd required.</div>
									</div>
								</md-input-container>
							</div>
						</md-card-content>
						<md-card-actions layout="row" layout-align="end center">
							<md-button ng-click="toCreateAccount()">Create new Account</md-button>
							<md-button type="submit">Login</md-button>
						</md-card-actions>
					</md-card>
				</div>
				</form>
			</script>
			
			<script type="text/ng-template" id="create-account-page.htm">
				<form method="post" action="/create_account" name="createAccountForm">
				<div id="create-account-container" flex-xs layout="column">
					<md-card>
						<img ng-src="{{imagePath}}" class="md-card-image" alt="Washed Out" md-colors="{background: '{{primary}}'}"/>
						<md-card-title>
							<md-card-title-text>
								<span class="md-headline">Create new account</span>
							</md-card-title-text>
						</md-card-title>
						<md-card-content>
							<div layout="column">
								<md-input-container>
									<label>Username</label>
									<input type="text" name="username" required/>
									<div ng-messages="createAccountForm.username.$error">
										<div ng-message="required">Username required.</div>
									</div>
								</md-input-container>
								
								<md-input-container>
									<label>Password</label>
									<input type="password" name="password" required/>
									<div ng-messages="createAccountForm.username.$error">
										<div ng-message="required">Passowrd required.</div>
									</div>
								</md-input-container>
							</div>
						</md-card-content>
						<md-card-actions layout="row" layout-align="end center">
							<md-button ng-click="toLogin()">Login</md-button>
							<md-button type="submit">Create new Account</md-button>
						</md-card-actions>
					</md-card>
				</div>
				</form>
			</script>
		</div>
		
	
  
	<!-- Your application bootstrap  -->
	<script type="text/javascript">
		
		var authApp = angular.module('authApp', ['ngRoute', 'ngMaterial', 'ngMessages']);
		authApp.config(['$routeProvider',
			function($routeProvider){
				$routeProvider.
					when('/login', {
						templateUrl: 'login-page.htm'
					}).
					when('/create_account', {
						templateUrl: 'create-account-page.htm'
					}).
					otherwise({
						templateUrl: 'login-page.htm'
					});
			}
		]);
		
		authApp.controller('authController', function($scope){
			$scope.imagePath = 'http://www.stratus360.com/wp-content/uploads/2015/02/121912_S360_WebLogo_w.png';
			$scope.toCreateAccount = function(){
				window.location.href = "#create_account";
			}
			
			$scope.toLogin = function(){
				window.location.href = "#login";
			}
			
			$scope.primary = 'indigo';
			$scope.acccent = 'blue';
		});
	</script>
  
</body>
</html>
